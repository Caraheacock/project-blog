<h3><%= @post.title %></h3>
<p><a href="/blog/<%= @user.username %>/edit_post/<%= @post.id %>" class="little_button">Edit this post</a> <a href="/blog/<%= @user.username %>/delete_confirm/<%= @post.id %>" class="little_button">Delete this post</a></p>
<p><%= @post.created_at %></p>
<% paragraphs = @post.make_paragraphs(@post.content) %>
<% paragraphs.each do |p| %>
	<p><%= p %></p>
<% end %>

<hr />

<div id="comments">
	<% if @post.comments == [] %>
		<p>No comments yet</p>
	<% else %>
		<% @post.comments.each do |comment| %>
			<div class="single_comment">
				<p><strong><%= comment.commenter %></strong></p>
				<p><%= comment.created_at %></p>
				<p><%= comment.content %></p>
			</div>
		<% end %>
	<% end %>
</div>

<p><a href="/blog/<%= @user.username %>/<%= @post.id %>/comment" class="little_button">Leave a comment</a> <a href="/blog/<%= @user.username %>" class="little_button">Back to <%= @user.username %> Blog</a></p>